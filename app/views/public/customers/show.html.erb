<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="col1">
        <h4>マイページ</h4>
      </div>
    <div>
      登録情報
      <%= link_to "編集", customers_information_edit_path, class: "btn btn-secondary btn-block" %>
    </div>
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    <div>
      配送先
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-block" %>
    </div>
    <div>
      注文履歴
      <%= link_to "一覧を見る", orders_path, class: "btn btn-secondary btn-block" %>
    </div>
    </div>
  </div>
</div>