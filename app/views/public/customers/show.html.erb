<div class='container'>
  <div class='row'>
    <div class="col-md-10">
      <div class="col1">
        <h4>マイページ</h4>
      </div>
    <div>
      <strong>登録情報</strong>
      <%= link_to "編集", customers_information_edit_path, class: "btn btn-success px-3" %>
    </div>
    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @customer.first_name %><%= @customer.last_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
    </div>
  </div>
  <div class="row py-2">
    <div class="col-md-5">
      <strong>配送先</strong>
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary px-3" %>
    </div>
  </div>
  <div class="row py-2">
    <div class="col-md-5">
      <strong>注文履歴</strong>
      <%= link_to "一覧を見る", orders_path, class: "btn btn-primary px-3" %>
    </div>
  </div>
</div>