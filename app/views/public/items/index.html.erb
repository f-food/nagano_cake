<!-- 商品一覧ページ -->

<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render 'admin/genres/index', genres: @genres %>
    </div>
    <div class='col-md-9 offset-1'>
      <h2 class='d-inline mr-2'>商品一覧</h2><span>(全<%= @items_count %>件)</span>
      <div class="row">
        <% @items.each do |item| %>
        <div class="col-md-3">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(150,150) %>
            <p><%= item.name %></p>
          <% end %>
          <p>¥<%= item.excluded_price.to_s(:delimited) %></p>
        </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>