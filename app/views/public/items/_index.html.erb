<div class="d-flex flex-wrap">
  <% items.each do |items|%>
   <div class="flex-item">
    <div class="card　border-0">
      <%=link_to item_path(items) do %>
      <%=image_tag items.image, size: '150x150'%>
      <%end%><br>
      <%=link_to item_path(items) do %>
       <p class="card-title">
        <%=items.name%>
       </p>
      <%end%><br>
      <p class="card-text">
       ￥<%=items.excluded_price%><br>
      </p>
    </div>
   </div>
  <% end %>
</div>