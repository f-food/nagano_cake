<!-- 顧客側 -->

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %>
    <span>(姓)</span><%= f.text_field :first_name, autocomplete: "first_name", placeholder: "田中" %>
    <span>(名)</span><%= f.text_field :last_name, autocomplete: "last_name", placeholder: "太郎" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %>
    <span>(セイ)</span><%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "タナカ" %>
    <span>(メイ)</span><%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "タロウ" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email", placeholder: "tanaka@example.com" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>
    <%= f.text_field :post_code, autocomplete: "post_code", placeholder: "1234567" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autocomplete: "address",placeholder: "東京都新宿区西新宿0-0" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %>
    <%= f.text_field :address, autocomplete: "address", placeholder: "11122223333" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">

  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>

<%= render "public/shared/links" %>
