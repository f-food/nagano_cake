<div class="container">
  <div class="row">
    <h3 class="mt-4">注文情報確認</h3>
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th colspan="3">商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="align-middle", colspan="3">
                <%= image_tag cart_item.item.get_image(60,40) %>
                <%= cart_item.item.name %>
              </td>
              <td class="align-middle">
                <%= cart_item.item.add_tax_price.to_s(:delimited) %>
              </td>
              <td class="text-center align-middle">
                <%= cart_item.quantity %>
              </td>
              <td>
                <%= cart_item.subtotal.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <table class="table table-bordered">
        <tr>
        <th class="table-secondary">送料</th>
          <td><%= @shipping_cost %></td>
          <th class="table-secondary">商品合計</th>
          <td><%= @total.to_s(:delimited) %></td>
          <th class="table-secondary">請求金額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
      <h2>支払い方法</h2>
      <div>
        <%= @order.payment_method_i18n %>
      </div>
      <h2>お届け先</h2>
      <div>
        〒<%= @order.post_code %><%= @order.address %><br>
        <%= @order.name %>
      </div>
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :total_payment, value: @order.total_payment %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
        <%= f.hidden_field :post_code, value: @order.post_code %>
        <%= f.hidden_field :address, value: @order.address %>
        <%= f.hidden_field :name, value: @order.name %>
        <%= f.hidden_field :shipping_cost, value: 800 %>
        <%= f.hidden_field :address_number, value: params[:order][:address_number] %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>