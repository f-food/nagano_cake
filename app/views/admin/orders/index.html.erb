<div class='container text-center'>
  <div class='row'>
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <h2 class="mt-4">
    <span style="background-color:#eee">注文履歴一覧</span>
  </h2>


    <table class="table">
        <thead>
          <tr class="bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><u><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></u></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row justify-content-center">
    <%= paginate @orders %>
  </div>

</div>