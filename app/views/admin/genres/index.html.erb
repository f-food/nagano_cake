<div class="container">
  <h3 class="m-4"><span style="background-color:#eee">ジャンル一覧・追加</span></h3>
</div>

<%= render "new", genre: @genre %>

<div class="container">
  <div class="row pt-4">
    <div class="col-4">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <th><%= genre.name %></th>
              <th><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn-sm btn-success' %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>