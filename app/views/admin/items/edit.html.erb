<div class="container">
<h3 class="m-4"><span style="background-color:#eee">商品編集</span></h3>
</div>

<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

<div class="container">
<div class="row justify-content-center">
  <div class="col-2">
  </div>

  <div class="col-7">
    <table class="table table-borderless">
      <tr>
        <td class="col-2">商品画像</td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>

      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name,placeholder: "商品名", :size=>"30x10" %></td>
      </tr>

      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :caption,placeholder: "ここに説明を記述します", :size=>"30x7" %></td>
      </tr>

      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name, incode_blake: "-- 選択してください --" %></td>
      </tr>

      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :excluded_price,placeholder: "1000", :size=>"10x10" %>円</td>
      </tr>

      <tr>
        <td class="col-3">販売ステータス</td>
        <td>
          <%= f.radio_button :is_status, true %>
          <%= f.label :is_status, "販売中" %>
          <%= f.radio_button :is_status, false %>
          <%= f.label :is_status, "販売停止中" %>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="row justify-content-center">
  <%= f.submit '変更を保存',class: 'btn btn-success px-4' %>
</div>

<% end %>