<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <div class="container">
    <h3 class="m-4"><span style="background-color:#eee">商品新規登録</span></h3>
  </div>


<!--バリデーションエラー文-->
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


  <div class="container">
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-7">
      <table class="table table-borderless">

        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>

        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder:"商品名", :size=>"30x10" %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :caption,placeholder:"ここに説明文を記述します", :size=>"30x7" %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
        </tr>

        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :excluded_price, placeholder:"1000", :size=>"19x7" %>円</td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_status, true %>
            <%= f.label :is_status, "販売中" %>

            <%= f.radio_button :is_status, true %>
            <%= f.label :is_status, "販売停止中" %>
          </td>
        </tr>
      </table>

        <div class="row justify-content-center">
          <%= f.submit "新規登録", class:"btn btn-success px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>